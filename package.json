  },
  "homepage": "https://github.com/rahulpatidar0505/playwright-pom#readme",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.9"
  },
  "dependencies": {
    "@faker-js/faker": "^10.2.0",
    "allure-commandline": "^2.36.0",
    "allure-playwright": "^3.4.5",
    "luxon": "^3.7.2",
    "prettier": "^3.8.0"
  }
}
